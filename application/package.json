{
  "name": "template_application",
  "version": "0.0.1",
  "description": "This is a Microservice template appication, meant to be forked.",
  "repository": {
    "type": "git",
    "url": "https://github.com/slidewiki/Microservice-Template"
  },
  "bugs": "https://github.com/slidewiki/Microservice-Template/issues",
  "author": "Roy Meissner (https://rmeissn.github.io/)",
  "license": "GPL-3.0",
  "main": "server.js",
  "scripts": {
    "clean": "rm -R ./node_modules/ ./coverage/",
    "lint": "jshint ./**/*.js --config .jshintrc",
    "pretest": "npm run lint",
    "test": "npm run test:unit && npm run test:integration",
    "posttest": "npm run coverage",
    "test:unit": "tape ./tests/unit.js",
    "test:integration": "tape ./tests/integration_newSlide.js",
    "coverage": "istanbul cover --include-all-sources ./tests/unit.js",
    "coverall": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "countLOC": "sloc -f cli-table -k total,source,comment,empty -e node_modules\\|coverage ./",
    "countLOC:details": "sloc -f cli-table -d -e node_modules\\|coverage ./",
    "start:watch": "watch 'npm start' ./ --ignoreUnreadable --ignoreDotFiles --wait=5"
  },
  "dependencies": {
    "boom": "3.1.x",
    "good": "6.4.x",
    "good-console": "5.3.x",
    "hapi": "13.0.x",
    "joi": "7.2.x",
    "mongodb": "^2.1.6"
  },
  "engines": {
    "node": "5.5.x"
  },
  "devDependencies": {
    "coveralls": "^2.11.6",
    "istanbul": "^0.4.2",
    "jshint": "^2.9.1",
    "sloc": "^0.1.10",
    "tape": "^4.4.0",
    "watch": "^0.17.1",
    "tap-spec": "^4.1.1"
  }
}
